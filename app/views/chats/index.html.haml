%p#notice= notice
%h1 Chats
%table
  %thead
    %tr
      %th Message
      %th{:colspan => "3"}
  %tbody
    - @chats.each do |chat|
      %tr{:id => "#{chat.id}"}
        %td= chat.message
        %td= link_to 'Show', chat
        %td= link_to 'Edit', edit_chat_path(chat)
        %td= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' }, remote: true
#new_message
%br/
= link_to 'New Chat', new_chat_path
